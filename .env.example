# ─── OpenAI ────────────────────────────────────────────────────────────────────
OPENAI_API_KEY=sk-...

# ─── Anthropic (Claude) ────────────────────────────────────────────────────────
ANTHROPIC_API_KEY=sk-ant-...

# ─── Text generation provider: gpt | claude  ← change this one value to switch
TEXT_GENERATION_PROVIDER=gpt

# ─── Replicate ─────────────────────────────────────────────────────────────────
REPLICATE_API_TOKEN=r8_...

# ─── Facebook ──────────────────────────────────────────────────────────────────
FB_APP_ID=your_app_id
FB_APP_SECRET=your_app_secret
# Paste your initial short-lived User Access Token here.
# The system will automatically exchange it for a long-lived token and page token.
FB_USER_ACCESS_TOKEN=your_short_lived_user_token
FB_PAGE_ID=your_facebook_page_id

# ─── App settings ──────────────────────────────────────────────────────────────
# Webhook secret (optional) – cron caller sends this in X-Webhook-Secret header
WEBHOOK_SECRET=

# Log level: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

# Port for FastAPI server
PORT=8000
